package idp2p:core;

world idp2p-id-verifier {
    import host: interface {
        use types.{id-proof, idp2p-error};
        verify-proof: func(proof: id-proof, data: list<u8>) -> result<bool, idp2p-error>;
    }
    export id-verifier;
}

world idp2p-message-handler {
    use types.{idp2p-error};

    import store;
    import id-verifier;
    import p2p-sender;

    export handle: func(message: list<u8>) -> result<_, idp2p-error>;
}